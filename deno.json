{
  "version": "0.1.0",
  "tasks": {
    "dev": "op run --env-file=.env -- deno run --allow-net --allow-env --allow-read main.ts",
    "dev:no-op": "deno run --allow-net --allow-env --allow-read main.ts",
    "build": "deno compile --allow-net --allow-env --allow-read --output canvas main.ts",
    "build:all": "deno task build:mac && deno task build:mac-arm && deno task build:linux && deno task build:windows",
    "build:mac": "deno compile --allow-net --allow-env --allow-read --target x86_64-apple-darwin --output dist/canvas-mac-x64 main.ts",
    "build:mac-arm": "deno compile --allow-net --allow-env --allow-read --target aarch64-apple-darwin --output dist/canvas-mac-arm64 main.ts",
    "build:linux": "deno compile --allow-net --allow-env --allow-read --target x86_64-unknown-linux-gnu --output dist/canvas-linux-x64 main.ts",
    "build:windows": "deno compile --allow-net --allow-env --allow-read --target x86_64-pc-windows-msvc --output dist/canvas-windows-x64.exe main.ts",
    "test": "deno test --allow-net --allow-env --allow-read",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check main.ts"
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.7",
    "@cliffy/table": "jsr:@cliffy/table@1.0.0-rc.7",
    "@std/dotenv": "jsr:@std/dotenv@0.225.3",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@1.0.1",
    "zod": "npm:zod@^3.23.8"
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
